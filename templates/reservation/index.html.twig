{% extends 'base.html.twig' %}

{% block title %}Liste des réservations{% endblock %}

{% block body %}
<div style="max-width: 1000px; margin: 2em auto;">
    <h1 style="text-align: center;">Réservations</h1>

    {% if reservations is empty %}
        <p style="text-align: center;">Aucune réservation trouvée.</p>
    {% else %}
        <table style="width: 100%; border-collapse: collapse;">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Statut</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for reservation in reservations %}
                <tr>
                    <td>{{ reservation.id }}</td>
                    <td>{{ reservation.status }}</td>
                    <td>{{ reservation.createdAt ? reservation.createdAt|date('d/m/Y H:i') : '' }}</td>
                    <td>
                        <a href="{{ path('app_reservation_show', {'id': reservation.id}) }}">Voir</a> |
                        <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}">Modifier</a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}

    <div style="text-align: center; margin-top: 2em;">
        <a href="{{ path('app_reservation_new') }}">Nouvelle réservation</a>
    </div>
</div>
{% endblock %}
