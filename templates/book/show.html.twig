{% extends 'base.html.twig' %}

{% block title %}Détail du livre{% endblock %}

{% block body %}
<div style="max-width: 800px; margin: 2em auto;">
    <h1>{{ book.titre }}</h1>

    <p><strong>Auteur :</strong> {{ book.auteur }}</p>
    <p><strong>Catégorie :</strong> {{ book.categorie }}</p>
    <p><strong>Langage :</strong> {{ book.langage }}</p>
    <p><strong>Description :</strong> {{ book.description }}</p>
    <p><strong>Stock :</strong> {{ book.stock }}</p>

    <div style="margin-top: 2em;">
        <a href="{{ path('app_book_edit', {'id': book.id}) }}">Modifier</a> |
        <a href="{{ path('app_book_index') }}">Retour</a>
    </div>

    {{ include('book/_delete_form.html.twig') }}
</div>
{% endblock %}
